<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical"
              android:padding="10dp">

    <ImageView
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:background="@drawable/adresse"
        android:id="@+id/iv_org_adresse"
        android:contentDescription="@string/iv_org_adresse"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_org_nom_organisme"
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_org_nom_organisme"
        fontPath="fonts/opensans_semibold.ttf"
        tools:ignore="MissingPrefix"/>

</LinearLayout>