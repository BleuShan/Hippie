<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/content_appbar_main"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="35dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/res_nom"
            android:id="@+id/tv_res_nom"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/res_qtee"
            android:id="@+id/tv_res_qtee"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>

        <TextView
            android:layout_width="82dp"
            android:layout_height="35dp"
            android:text="@string/res_peremption"
            android:id="@+id/tv_res_peremption"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_weight="0.06"/>

    </LinearLayout>

    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="505dp"
        android:id="@+id/elv_reservation"
        android:layout_weight="0.50"/>

</LinearLayout>