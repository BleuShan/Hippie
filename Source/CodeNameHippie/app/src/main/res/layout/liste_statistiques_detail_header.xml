<?xml version="1.0" encoding="utf-8"?>
<!--Chaque ligne contenu dans la liste MES DONS contient les éléments suivants-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:padding="10dp">


    <!--Afficher le nom de la marchandise-->
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nom du produit"
        android:id="@+id/tv_statistiques_nom_marchandise"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_weight="0.1"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <!--Afficher la quantité de la marchandise-->
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Qtée"
        android:id="@+id/tv_statistiques_qtee_marchandise"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_weight="0.1"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!--Afficher la date de collecte du produit-->
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Date de collecte"
        android:id="@+id/tv_statistiques_date_collecte"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_weight="0.1"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <!--Afficher la valeur du produit-->
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Valeur"
        android:id="@+id/tv_statistiques_valeur_produit"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_weight="0.1"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

</LinearLayout>