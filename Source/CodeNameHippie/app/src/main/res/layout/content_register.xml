<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#737272"
            android:fillViewport="false"
            android:focusableInTouchMode="false">
	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:padding="16dp"
			android:scrollIndicators="top"
			tools:context="com.pam.codenamehippie.ui.Register"
			tools:showIn="@layout/activity_register">
		<ImageView
				android:id="@+id/iv_logo"
				android:layout_width="300dp"
				android:layout_height="125dp"
				android:layout_gravity="center_horizontal"
				android:layout_marginBottom="45dp"
				android:layout_marginTop="25dp"
				android:background="@drawable/logo" />
		<TextView
				android:id="@+id/tv_quetions"
				android:layout_width="fill_parent"
				android:layout_height="61dp"
				android:layout_alignParentTop="true"
				android:layout_centerHorizontal="true"
				android:layout_gravity="center_horizontal"
				android:text="ÃŠTES-VOUS ..."
				android:textAlignment="center"
				android:textColor="#ffffff"
				android:textSize="40sp" />
		<LinearLayout
				android:layout_width="315dp"
				android:layout_height="match_parent"
				android:layout_gravity="center_horizontal"
				android:orientation="vertical">
			<Button
					android:id="@+id/btn_particulier"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_alignParentStart="true"
					android:layout_gravity="center_horizontal"
					android:layout_marginTop="50dp"
					android:background="@drawable/button"
					android:padding="25dp"
					android:text="Un particulier ?"
					android:textColor="#222222"
					android:textSize="30sp" />
			<Button
					android:id="@+id/btn_entreprise"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_alignParentStart="true"
					android:layout_below="@+id/tv_quetions"
					android:layout_gravity="center_horizontal"
					android:layout_marginTop="40dp"
					android:background="@drawable/button"
					android:padding="25dp"
					android:text="Une entreprise ?"
					android:textColor="#222222"
					android:textSize="30sp" />
			<Button
					android:id="@+id/btn_organisme"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_alignParentStart="true"
					android:layout_gravity="center_horizontal"
					android:layout_marginTop="40dp"
					android:background="@drawable/button"
					android:padding="25dp"
					android:text="Un organisme ?"
					android:textColor="#222222"
					android:textSize="30sp" />
		</LinearLayout>
	</LinearLayout>
</ScrollView>