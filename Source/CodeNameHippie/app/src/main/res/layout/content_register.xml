<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#737272"
    android:fillViewport="false"
    android:focusableInTouchMode="false">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.pam.codenamehippie.ui.Register"
    tools:showIn="@layout/activity_register"
    android:scrollIndicators="top">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="125dp"
        android:id="@+id/iv_logo"
        android:background="@drawable/logo"
        android:layout_marginBottom="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="61dp"
        android:text="ÃŠTES-VOUS ..."
        android:id="@+id/tv_quetions"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:fontFamily="@string/openSans"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center" />

<LinearLayout
    android:layout_width="315dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Un particulier ?"
        android:id="@+id/btn_particulier"
        android:background="@drawable/button"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:textSize="30sp"
        android:padding="25dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#222222"
        android:fontFamily="@string/openSans" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Une entreprise ?"
        android:id="@+id/btn_entreprise"
        android:background="@drawable/button"
        android:layout_below="@+id/tv_quetions"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:textSize="30sp"
        android:padding="25dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#222222"
        android:fontFamily="@string/openSans" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Un organisme ?"
        android:id="@+id/btn_organisme"
        android:background="@drawable/button"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:textSize="30sp"
        android:padding="25dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#222222"
        android:fontFamily="@string/openSans" />

</LinearLayout>
</LinearLayout>
</ScrollView>