<resources>

    <style name="AppTheme" parent="Base.AppTheme">
        <item name="android:textColorPrimary">@color/primary_text_material_light</item>
    </style>
    <style name="AppThemeMap" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
    </style>


    <style name="AppTheme.DarkActionBar" parent="AppTheme">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>

    </style>


    <style name="AppThemeOverlay.ActionBar" parent="Base.AppThemeOverlay.ActionBar"/>

    <style name="AppThemeOverlay.Light" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Base application theme. -->
    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowActionBarOverlay">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarTheme">@style/AppThemeOverlay.ActionBar</item>
        <item name="popupTheme">@style/AppThemeOverlay.Light</item>
    </style>

    <!-- Style pour le diagramme des Statistiques -->
    <style name="sample_activity">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <!-- Boutton setting en blanc  -->
    <style name="Base.AppThemeOverlay.ActionBar"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

</resources>
